{
  "schemaVersion": 1,
  "id": "armor-hider",
  "version": "${version}",
  "name": "armor-hider",
  "description": "Small Fabric Server/Client mod to hide armor pieces based on player preferences.",
  "authors": [
    {
      "name": "zannagh",
      "contact": {
        "email": "mail@zannagh.me"
      }
    }
  ],
  "contact": {
    "email": "mail@zannagh.me",
    "homepage": "https://github.com/zannagh",
    "sources": "https://github.com/zannagh/armor-hider",
    "issues": "https://github.com/zannagh/armor-hider/issues"
  },
  "license": "MIT",
  "icon": "assets/armor-hider/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "de.zannagh.armorhider.fabric.ArmorHiderFabric"
    ],
    "client": [
      "de.zannagh.armorhider.fabric.ArmorHiderClientFabric"
    ]
  },
  "mixins": [
    "armor-hider.mixins.json",
    {
      "config": "armor-hider.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=0.15.0",
    "minecraft": "${minecraft_version}",
    "java": ">=${java_version}"
  }
}